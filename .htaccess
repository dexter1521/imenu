# ============================================
# iMenu - Configuración de Apache (.htaccess)
# ============================================

# ------------------------------
# REWRITE ENGINE Y URL AMIGABLES
# ------------------------------
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect HTTP to HTTPS (descomenta si usas SSL)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # CodeIgniter URL rewriting
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>

# ------------------------------
# PROTECCIÓN DE ARCHIVOS Y CARPETAS SENSIBLES
# ------------------------------

# Bloquear acceso a carpetas del sistema CodeIgniter
<IfModule mod_rewrite.c>
    # Carpeta system/
    RewriteCond %{REQUEST_URI} ^system.*
    RewriteRule ^(.*)$ index.php?/access_denied [L]
    
    # Carpeta application/
    RewriteCond %{REQUEST_URI} ^application.*
    RewriteRule ^(.*)$ index.php?/access_denied [L]
</IfModule>

# Bloquear acceso a Git
<FilesMatch "^\.git">
    <IfModule authz_core_module>
        Require all denied
    </IfModule>
    <IfModule !authz_core_module>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquear acceso a archivos de configuración
<FilesMatch "\.(env|env\.local|env\.production|gitignore|htaccess|htpasswd)$">
    <IfModule authz_core_module>
        Require all denied
    </IfModule>
    <IfModule !authz_core_module>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquear acceso a archivos de proyecto
<FilesMatch "(composer\.(json|lock)|package\.(json|lock)|\.editorconfig|TODO\.md|README\.md|license\.txt|readme\.rst)$">
    <IfModule authz_core_module>
        Require all denied
    </IfModule>
    <IfModule !authz_core_module>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquear acceso a install.php en producción (descomenta cuando esté en producción)
# <Files "install.php">
