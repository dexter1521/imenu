# ============================================
# iMenu - Configuración de Apache (.htaccess)
# Versión Hardened
# ============================================

# Ocultar la firma del servidor (versión de Apache)
ServerSignature Off

# ------------------------------
# REWRITE ENGINE Y URL AMIGABLES
# ------------------------------
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # -- PRODUCCIÓN: Redirección forzada a HTTPS --
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # CodeIgniter URL rewriting
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>

# ---------------------------------------------
# PROTECCIÓN DE ARCHIVOS Y CARPETAS SENSIBLES
# ---------------------------------------------

# Bloquear acceso a carpetas del framework y de desarrollo
<IfModule mod_authz_core.c>
    RedirectMatch 403 ^/(application|system|vendor|tests|docs)/.*
    RedirectMatch 403 ^/(composer\.phar|phpunit\.xml|psalm\.xml)
</IfModule>

# Bloquear acceso a Git
<FilesMatch "^\.git">
    <IfModule authz_core_module>
        Require all denied
    </IfModule>
    <IfModule !authz_core_module>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquear acceso a archivos de configuración
<FilesMatch "\.(env|env\..*|gitignore|htaccess|htpasswd|user\.ini)$">
    <IfModule authz_core_module>
        Require all denied
    </IfModule>
    <IfModule !authz_core_module>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquear acceso a archivos de proyecto
<FilesMatch "(composer\.(json|lock)|package\.(json|lock)|\.editorconfig|TODO.*|README.*|CHANGELOG.*|LICENSE.*|SECURITY\.md|Dockerfile|docker-compose\.yml)$">
    <IfModule authz_core_module>
        Require all denied
    </IfModule>
    <IfModule !authz_core_module>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>


# Bloquear acceso a install.php en producción
<Files "install.php">
    <IfModule authz_core_module>
        Require all denied
    </IfModule>
    <IfModule !authz_core_module>
        Order allow,deny
        Deny from all
    </IfModule>
</Files>

# Bloquear archivos PHP de backup
<FilesMatch "\.(bak|backup|old|orig|save|swp|tmp)$">
    <IfModule authz_core_module>
        Require all denied
    </IfModule>
    <IfModule !authz_core_module>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# ------------------------------
# PROTECCIÓN CONTRA ATAQUES COMUNES
# ------------------------------
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Bloquear File Injection
    RewriteCond %{QUERY_STRING} (include|require|require_once|php:)\( [NC]
    RewriteRule .* - [F,L]

    # Bloquear SQL Injection básico
    RewriteCond %{QUERY_STRING} (union|select|concat|char|cast|update|delete|insert|benchmark|outfile|load_file) [NC]
    RewriteRule .* - [F,L]

    # Bloquear Cross-Site Scripting (XSS) básico
    RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    RewriteRule .* - [F,L]
</IfModule>

# ------------------------------
# HEADERS DE SEGURIDAD
# ------------------------------
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir sniffing de tipo MIME
    Header always set X-Content-Type-Options "nosniff"
    
    # X-XSS-Protection está obsoleto, es mejor confiar en una CSP fuerte.
    # Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # -- PRODUCCIÓN: HSTS (Strict-Transport-Security) --
    # Descomenta SOLO si tienes HTTPS funcionando correctamente.
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Permissions Policy (antes Feature-Policy) - Bloquea features sensibles por defecto
    Header always set Permissions-Policy "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()"
    
    # Content Security Policy (CSP) - El objetivo a largo plazo es eliminar 'unsafe-inline' y 'unsafe-eval'
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://fonts.googleapis.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'"
    
    # Eliminar headers que revelan información del servidor
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# ------------------------------
# CONFIGURACIÓN DE CACHE
# ------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Assets estáticos
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 month"
    
    # No cachear APIs y contenido dinámico
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ------------------------------
# LÍMITES Y RENDIMIENTO
# ------------------------------
# Límite de tamaño de archivo (para uploads)
php_value upload_max_filesize 10M
php_value post_max_size 10M

# Límites de tiempo
php_value max_execution_time 30
php_value max_input_time 30

# Ocultar errores PHP en producción (descomenta en producción)
# php_flag display_errors Off
# php_flag log_errors On

